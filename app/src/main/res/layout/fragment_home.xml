<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".HomeFragment"
                                             android:background="@color/colorPrimaryDark">

    <!-- TODO: Update blank fragment layout -->
    <Button
            android:text="@string/ordina"
            android:layout_width="0dp"
            android:layout_height="516dp"
            android:id="@+id/inizia" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:drawableTop="@mipmap/img2"
            android:layout_marginBottom="32dp" android:fontFamily="sans-serif" android:typeface="sans"
            android:textColor="#fff" android:textSize="18sp"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/italiano"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/inglese"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/inizia"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@mipmap/italy"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/inglese"
            app:layout_constraintStart_toEndOf="@+id/italiano" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inizia" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@mipmap/inglese"/>
    <TextView
            android:text="@string/seleziona_la_lingua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center" android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inizia" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.145" android:textColor="#ffff"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/inizia"
            android:visibility="visible" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>